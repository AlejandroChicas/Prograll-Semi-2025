<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/txtNuevoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Usuario"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/txtNuevaContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva ContraseÃ±a"
        android:inputType="textPassword"
        android:layout_below="@id/txtNuevoUsuario"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnRegistrarCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Cuenta"
        android:layout_below="@id/txtNuevaContrasena"
        android:layout_marginTop="24dp"
        android:background="@color/aqua_oscuro"/>

</RelativeLayout>