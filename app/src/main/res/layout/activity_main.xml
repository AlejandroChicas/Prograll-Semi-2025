<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Label -->
    <TextView
        android:textSize="20dp"
        android:id="@+id/lblNum1"
        android:text="Num 1:"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- textbox -->
    <EditText
        android:id="@+id/txtNum1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:hint="ej. 5" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/lblNum2"
        android:text="Num 2:"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtNum2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="110dp"
        android:enabled="true"
        android:hint="ej. 8" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/lblRespuesta"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:text="Respuesta: ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/black"
        android:text="Calcular" />

    <RadioGroup
        android:id="@+id/rgoOpciones"
        android:layout_width="350dp"
        android:layout_height="190dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp">

        <RadioButton
            android:id="@+id/rgoSuma"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:checked="true"
            android:text="Suma" />

        <RadioButton
            android:id="@+id/rgoResta"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Resta" />

        <RadioButton
            android:id="@+id/rgoMultiplicacion"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Multiplicacion" />

        <RadioButton
            android:id="@+id/rgoDivision"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Division" />

        <RadioButton
            android:id="@+id/rgoExponencial"
            android:layout_width="124dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-150dp"
            android:text="Exponencial" />

        <RadioButton
            android:id="@+id/rgoPorcentaje"
            android:layout_width="114dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:text="Porcentaje" />

        <RadioButton
            android:id="@+id/rgoRaiz"
            android:layout_width="114dp"
            android:layout_height="30dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="150dp"
            android:text="Raiz" />

        <RadioButton
            android:id="@+id/rgoFactorial"
            android:layout_width="114dp"
            android:layout_height="30dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="150dp"
            android:text="Factorial" />

    </RadioGroup>


  <!--  <Button
        android:id="@+id/btnSumar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/black"
        android:text="Sumar" />

    <CheckBox
        android:id="@+id/chbSumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        android:text="Sumar" /> -->

</RelativeLayout>