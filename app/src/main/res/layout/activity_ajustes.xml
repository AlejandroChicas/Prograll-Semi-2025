<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/txtTituloAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes de la Aplicación"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Switch para activar/desactivar notificaciones -->
    <Switch
        android:id="@+id/switchNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activar Notificaciones"
        android:textColor="@color/black"
        android:layout_below="@id/txtTituloAjustes"
        android:layout_marginTop="32dp" />

    <!-- Switch para activar/desactivar tema oscuro -->
    <Switch
        android:id="@+id/switchTemaOscuro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Oscuro"
        android:textColor="@color/black"
        android:layout_below="@id/switchNotificaciones"
        android:layout_marginTop="16dp" />

    <!-- Switch para activar/desactivar recordatorio automático -->
    <Switch
        android:id="@+id/switchRecordatorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recordatorio Automático"
        android:textColor="@color/black"
        android:layout_below="@id/switchTemaOscuro"
        android:layout_marginTop="16dp" />

    <!-- Spinner para selección de idioma -->
    <Spinner
        android:id="@+id/spinnerIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchRecordatorios"
        android:layout_marginTop="32dp" />

    <!-- Botón para ir a Chat con Usuarios -->
    <Button
        android:id="@+id/btnChatUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat con Usuarios"
        android:textSize="16sp"
        android:layout_below="@id/spinnerIdioma"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/aqua_oscuro"
        android:textColor="@android:color/white"
        android:padding="12dp" />

    <!-- Botón para guardar los ajustes -->
    <Button
        android:id="@+id/btnGuardarAjustes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Ajustes"
        android:layout_below="@id/btnChatUsuarios"
        android:layout_marginTop="32dp"
        android:background="@color/aqua_oscuro"
        android:textColor="@android:color/black"
        android:padding="12dp" />

    <!-- Botón para cerrar sesión -->
    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:layout_below="@id/btnGuardarAjustes"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:padding="12dp" />

</RelativeLayout>