<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#6A1B9A"> <!-- Morado oscuro -->

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/txtTituloAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes de la Aplicación"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Switch para activar/desactivar notificaciones -->
    <Switch
        android:id="@+id/switchNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activar Notificaciones"
        android:textColor="@android:color/white"
        android:layout_below="@id/txtTituloAjustes"
        android:layout_marginTop="32dp" />

    <!-- Switch para activar/desactivar tema oscuro -->
    <Switch
        android:id="@+id/switchTemaOscuro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Oscuro"
        android:textColor="@android:color/white"
        android:layout_below="@id/switchNotificaciones"
        android:layout_marginTop="16dp" />

    <!-- Switch para activar/desactivar recordatorio automático -->
    <Switch
        android:id="@+id/switchRecordatorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recordatorio Automático"
        android:textColor="@android:color/white"
        android:layout_below="@id/switchTemaOscuro"
        android:layout_marginTop="16dp" />

    <!-- Switch para activar/desactivar opciones de Chats -->
    <Switch
        android:id="@+id/switchChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activar opciones de Chats"
        android:textColor="@android:color/white"
        android:layout_below="@id/switchRecordatorios"
        android:layout_marginTop="32dp" />

    <!-- Switch para activar/desactivar idioma -->
    <Switch
        android:id="@+id/switchIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Idioma: Español (Activado)"
        android:textColor="@android:color/white"
        android:layout_below="@id/switchChats"
        android:layout_marginTop="16dp" />

    <!-- Botón para guardar los ajustes -->
    <Button
        android:id="@+id/btnGuardarAjustes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Ajustes"
        android:layout_below="@id/switchIdioma"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:padding="12dp" />

</RelativeLayout>